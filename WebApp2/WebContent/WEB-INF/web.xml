<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>WebApp</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>help</servlet-name>
    <servlet-class>servlets.HelperServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>help</servlet-name>
    <url-pattern>/h</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>random</servlet-name>
    <servlet-class>servlets.RandomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>random</servlet-name>
    <url-pattern>/rand</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>test</servlet-name>
    <servlet-class>servlets.Test</servlet-class>
    <init-param>
      <description>phone num</description>
      <param-name>phone</param-name>
      <param-value>+375111111111</param-value>
    </init-param>
    <init-param>
      <description>address</description>
      <param-name>address</param-name>
      <param-value>Minsk</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>test</servlet-name>
    <url-pattern>/t</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>math</servlet-name>
    <servlet-class>servlets.MathServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>math</servlet-name>
    <url-pattern>/math</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>servlets.HomeServlet</servlet-class>
  </servlet>
  <filter>
    <filter-name>CheckAuth</filter-name>
    <filter-class>filters.CheckAuthFilter</filter-class>
  </filter>
  <filter>
    <filter-name>Log</filter-name>
    <filter-class>filters.LogFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckAuth</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>Log</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>